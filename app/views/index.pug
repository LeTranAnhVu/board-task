extends layout

block content
	h1= title
	section.section-task.containter-fluid
		.row
			.col-lg-4.tasks-col
				#tasks-mission
					.tasks-box
						.title-box
							h3.task-title Nhiệm Vụ
							.sort-box
								.sort.btn#sortByNewest
									i.fa.fa-calendar-alt
									i.fa.fa-sort.ml-1
								.sort.btn#sortByStatus
									i.fa.fa-thermometer-three-quarters
									i.fa.fa-sort.ml-1
								.sort.btn#sortByDeadline
									i.fa.fa-clock
									i.fa.fa-sort.ml-1
						.tasks
							- for (let i in tasks)
								include ./components/task



